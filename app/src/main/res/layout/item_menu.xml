<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="117dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/back_item"
    android:clickable="true"
    android:elevation="2dp"
    android:foreground="?android:selectableItemBackground"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:stateListAnimator="@animator/raise"
    app:elevation="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_menu"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:src="@drawable/avab" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/img_menu"
            android:background="@drawable/rounded"
            android:orientation="horizontal">

            <com.pixplicity.fontview.FontAppCompatTextView
                android:id="@+id/txt_mins"
                style="@style/FontTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 mins"
                android:textColor="#FFF"
                android:textSize="10.5dp" />

        </LinearLayout>

    </RelativeLayout>

    <com.pixplicity.fontview.FontAppCompatTextView
        android:id="@+id/txt_title"
        style="@style/FontTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="2dp"
        android:lines="2"
        android:maxLines="2"
        android:text="Spice Noodle \n with chicken"
        android:textAlignment="center"
        android:textColor="#262626"
        android:textSize="12.5dp"
        android:textStyle="bold" />

    <com.pixplicity.fontview.FontAppCompatTextView
        android:id="@+id/txt_harga"
        style="@style/FontTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2dp"
        android:text="$12.00"
        android:textColor="#767676"
        android:textSize="11dp" />

</LinearLayout>